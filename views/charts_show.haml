%script{src:"//code.highcharts.com/highcharts.js"}
%div#myChart{width: "100%", height: "100%"}

:javascript
  $(function() {
    // Create the chart
    $('#myChart').highcharts({
      chart: {
        height: 800,
      },
      title : {
        text : 'Balance over time'
      },
      navigator: {
        enabled: false,
      },
      xAxis: {
       type: 'datetime',
      },
      series : [{
        name : 'Difference from start',
        data : #{@data},

        tooltip: {
          valueDecimals: 2
        }
      }]
    });

  });
