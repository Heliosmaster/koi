%div.col-md-6.col-md-offset-3
  %form{action: "/transaction/#{@transaction.id}", method: "post", class: "form-horizontal"}
    %input{name: "_method", type: "hidden", value: "put"}
    %div.form-group
      %label.col-md-2 Date
      %div.col-md-10
        %input{type: "date", class: "form-control", value:"#{@transaction.date}", name: "transaction[date]"}
    %div.form-group
      %label.col-md-2 Amount
      %div.col-md-10
        %div.input-group
          %span.input-group-addon â‚¬
          %input{type: "number", class: "form-control", step: "0.01", value: "#{@transaction.amount}", name: "transaction[amount]"}
    %div.form-group
      %label.col-md-2 Target
      %div.col-md-10
        %textarea{rows: 2, class: "form-control", name: "transaction[target]"}= @transaction.target
    %div.form-group
      %label.col-md-2 Reason
      %div.col-md-10
        %textarea{rows: 2, class: "form-control", name: "transaction[reason]"}= @transaction.reason
    %div.form-group
      %label.col-md-2 Shared
      %div.col-md-10
        %input{type: "checkbox", value: "t", name: "transaction[shared]", checked: @transaction.shared }
    %div.form-group
      %div.col-md-10.col-md-offset-2
        %span.btn.btn-default{onclick: "window.history.back()"} Back
        %button{type: "submit", class: "btn btn-primary"} Update
