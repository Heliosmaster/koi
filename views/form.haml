%div.col-md-6.col-md-offset-3
  %form{action: "/transaction/add", method: "post", class: "form-horizontal"}
    %div.form-group
      %label.col-md-2 Date
      %div.col-md-10
        %input{type: "date", class: "form-control", value:"#{Date.today}", name: "transaction[date]"}
    %div.form-group
      %label.col-md-2 Amount
      %div.col-md-10
        %div.input-group
          %span.input-group-addon â‚¬
          %input{type: "number", class: "form-control", step: "0.01", placeholder: "0.0", name: "transaction[amount]"}
    %div.form-group
      %label.col-md-2 Target
      %div.col-md-10
        %textarea{rows: 2, class: "form-control", name: "transaction[target]"}
    %div.form-group
      %label.col-md-2 Reason
      %div.col-md-10
        %textarea{rows: 2, class: "form-control", name: "transaction[reason]"}
    %div.form-group
      %label.col-md-2 Shared
      %div.col-md-10
        %input{type: "checkbox", value: "t", checked: true, name: "transaction[shared]"}
    %div.form-group
      %div.col-md-10.col-md-offset-2
        %a{href:"/", class:"btn btn-default"} Back
        %button{type: "submit", class: "btn btn-primary"} Submit
