%div.col-md-6.col-md-offset-3
  %form{action: "/users/#{@selected_user.id}", method: "post", class: "form-horizontal"}
    %input{name: "_method", type: "hidden", value: "put"}
    %div.form-group
      %label.col-md-2 Name
      %div.col-md-10
        %input{type: "text", class: "form-control", value:"#{@selected_user.name}", name: "user[name]"}
    %div.form-group
      %div.col-md-10.col-md-offset-2
        %span.btn.btn-default{onclick: "window.history.back()"} Back
        %button{type: "submit", class: "btn btn-primary"} Update
